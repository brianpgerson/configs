[alias]    
    cam = commit -am
    s = status
    po = push origin HEAD
    r1 = reset HEAD^1 --hard
    ap = add --patch
    co = checkout
[color]
    ui = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = red
